{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*"
  ]
}